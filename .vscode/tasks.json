{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: cl.exe build active file",
			"command": "cl.exe",
			"args": [
				"/Zi",
				"/EHsc",
				"/nologo",
				"/Fe${workspaceFolder}\\run\\OpenGl",
				"/Fd${workspaceFolder}\\build\\",
				"/Fo${workspaceFolder}\\build\\",
				"/I${workspaceFolder}\\include\\",
				"/MD",
				"${workspaceFolder}/source/*.cpp",
				"${workspaceFolder}/source/*.c",
				"user32.lib",
				"Gdi32.lib",
				"Shell32.lib",
				"Opengl32.lib",
				"${workspaceFolder}\\lib\\glfw3.lib"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$msCompile"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: cl.exe"
		}
	]
}